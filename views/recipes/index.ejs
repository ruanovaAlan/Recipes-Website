<% layout('layouts/boilerplate') %>
    <div class="container">
        <h1 class="text-capitalize">
            <%= seccion.replace(/-/g, " " ) %>
        </h1>
    </div>
    <div class="container">
        <div class="row">
            <% for(let recipe of recipes) { %>
                <div class="col-lg-3 col-md-4 pb-2">
                    <!-- Use 'col-md-3' for medium-sized screens to create 4 columns per row -->
                    <div class="card m-auto mx-0 p-0 index-style" style="width: auto;">
                        <img src=" <%=recipe.imagen %>" class="card-img-top index-img" data-bs-toggle="modal"
                            data-bs-target="#exampleModal<%= recipe._id %>">
                        <div class="card-body">
                            <h5 class="card-title" style="height: 50px;">
                                <%= recipe.titulo %>
                            </h5>
                            <pre class="card-text">Servings: 10</pre>
                            <div class="d-flex justify-content-between">
                                <a href="/recipes/<%= recipe._id %>" class="btn btn-secondary">Ver Receta</a>
                                <form action="/recipes/favorites" method="post" id="save">
                                    <input type="hidden" name="recipeId" value="<%= recipe._id %>">
                                    <button><i class="fa-regular fa-heart fa-2xl py-3"
                                            style="color: #ff5252;"></i></button>

                                    <a href=""><i class="fa-solid fa-heart fa-2xl py-3" style="color: #ff5252;"></i></a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
        </div>
    </div>
    <%- include('../partials/preview') %>