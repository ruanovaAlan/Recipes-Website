<% layout('layouts/boilerplate.ejs') %>

    <div class="container">
        <h1>Sin Preparar</h1>
        <% if(notPrepared.length> 0) {%>
            <div class="row">
                <% for(let favorite of notPrepared) { %>
                    <div class="col-lg-3  col-lg-4 col-md-6 col-12 pb-2">
                        <!-- Use 'col-md-3' for medium-sized screens to create 4 columns per row -->
                        <div class="card m-auto mx-0 p-0 index-style " style="width: auto;">
                            <img src="<%=favorite.recipe.imagen %>" class="card-img-top index-img"
                                data-bs-toggle="modal" data-bs-target="#exampleModal<%= favorite.recipe._id %>">
                            <div class="d-flex position-absolute end-0 ">
                                <div class="dropdown">
                                    <button class="btn btn-secondary btn-sm dropdown-toggle" type="button"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Estatus
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li>
                                            <form action="/recipes/favorites?_method=PATCH" method="post"
                                                class="dropdown-item">
                                                <label for="">Cambiar estatus</label>
                                                <select name="newStatus" class="form-select"
                                                    aria-label="Default select example">
                                                    <option value="sin-preparar">Sin preparar</option>
                                                    <option value="preparado">Preparado</option>
                                                    <option value="me-gusta">Me gusta</option>
                                                    <option value="no-gusta">No me gusta</option>
                                                </select>
                                                <input type="hidden" name="recipeId" value="<%= favorite._id %>">
                                                <button>Guardar</button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
